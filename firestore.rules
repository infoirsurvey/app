rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    function isAdmin() {
      return hasRole('ADMIN');
    }

    function isApproved() {
      return isSignedIn() && getUserData().approved == true;
    }

    function isReportAssignedToClient(reportId) {
      return exists(/databases/$(database)/documents/clientAssignments/$(reportId + '_' + request.auth.uid));
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isAdmin();
    }

    // Assignments collection
    match /assignments/{assignmentId} {
      allow read: if isSignedIn() && (
        hasRole('ADMIN') ||
        hasRole('MANAGER') ||
        (hasRole('SURVEYOR') && resource.data.surveyorId == request.auth.uid)
      );
      allow create: if hasRole('ADMIN') || hasRole('MANAGER');
      allow update: if isSignedIn() && (
        hasRole('ADMIN') ||
        hasRole('MANAGER') ||
        (hasRole('SURVEYOR') && resource.data.surveyorId == request.auth.uid && resource.data.status == 'PENDING')
      );
    }

    // Survey Data
    match /surveys/{surveyId} {
      allow read: if isSignedIn() && (
        hasRole('ADMIN') ||
        hasRole('MANAGER') ||
        hasRole('INTERNAL_OFFICE') ||
        (hasRole('SURVEYOR') && resource.data.surveyorId == request.auth.uid)
      );
      allow create: if hasRole('SURVEYOR');
      allow update: if isSignedIn() && (
        hasRole('ADMIN') ||
        hasRole('MANAGER') ||
        (hasRole('INTERNAL_OFFICE') && resource.data.locked == false) ||
        (hasRole('SURVEYOR') && resource.data.surveyorId == request.auth.uid && resource.data.locked == false)
      );
    }

    // Reports
    match /reports/{reportId} {
      allow read: if isSignedIn() && (
        hasRole('ADMIN') ||
        hasRole('MANAGER') ||
        (hasRole('CLIENT') && isReportAssignedToClient(reportId))
      );
      allow create, update: if hasRole('ADMIN') || hasRole('MANAGER');
    }

    // Client Assignments
    match /clientAssignments/{assignmentId} {
      allow read: if isSignedIn() && (
        hasRole('ADMIN') ||
        hasRole('MANAGER') ||
        (hasRole('CLIENT') && resource.data.clientId == request.auth.uid)
      );
      allow create, update: if hasRole('ADMIN') || hasRole('MANAGER');
    }

    // Audit Logs
    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isSignedIn();
    }
  }
}
